@{
  Layout = "_Layout";
}

@model IEnumerable<ToDoList.Models.Item>

<div class='container'>
    <h1>To Do List</h1>
    <h4>@Html.DisplayNameFor(model => model.Description)</h4>
    <ul>
        @foreach(var listItem in Model)
        {
            @Html.DisplayFor(modelItem => listItem.Description)<br/>
            @Html.ActionLink("Details", "Details", new { id = listItem.ItemId });<br/>
        }
    </ul>
</div>